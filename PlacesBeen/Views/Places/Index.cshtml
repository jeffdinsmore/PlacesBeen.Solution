@using PlacesBeen.Models;
<!DOCTYPE html>
<html>
  <head>
    <title>To Do List</title>
    <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'>
  </head>
  <body>
    <div class="container">
      <br>
      <h1>Places You've Been</h1>

      @if (Model.Count == 0)
      {
        <p>There are no places in the list.</p>
      }
      <ul>
        @foreach (Place place in Model)
        {
          <li><a href='/places/@place.Id'>@place.CityName</a></li>
        }
      </ul>

      <p><a href='/places/new'>Add new Entry?</a><br></p>
      <p><a href='/'>Go homepage</a></p>
      <form action="/places/delete" method="post">
        <button type="submit" name="button">Clear All Entries</button>
      </form>
    </div>
  </body>
</html
